<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/blip_image"
            android:layout_width="123dp"
            android:layout_height="123dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/b_character"
            />
        <TextView
            android:id="@+id/tv_save"
            android:text="@string/you_save"
            android:layout_toEndOf="@id/blip_image"
            android:layout_width="wrap_content"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:layout_below="@id/tv_save"
            android:layout_toEndOf="@id/blip_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_prefix"
                android:text="@string/dollar_sign"
                android:visibility="gone"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:textSize="56sp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_suffix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Title"
                android:visibility="gone"
                android:text="@string/percent_sign"
                />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/right_divider"
        android:layout_below="@id/rl_save"
        android:background="@color/black_50_color"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    <TextView
        android:id="@+id/tv_vendor"
        android:layout_below="@id/right_divider"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_offer"
        android:layout_below="@id/tv_vendor"
        android:layout_marginTop="4dp"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:maxLines="1"
        android:singleLine="true"
        android:textStyle="bold"
        android:ellipsize="marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/top_divider"
        android:layout_below="@id/tv_offer"
        android:background="@color/black_50_color"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="2dp"
        android:layout_width="match_parent" />
    <TextView
        android:id="@+id/tv_location"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:maxLines="3"
        android:layout_alignParentBottom="true"
        android:ellipsize="marquee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/bottom_divider"
        android:layout_above="@id/tv_location"
        android:background="@color/black_50_color"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="2dp"
        android:layout_width="match_parent" />
    <RelativeLayout
        android:id="@+id/tv_expiration_date_layout"
        android:layout_above="@id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_expiration_date_title"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textStyle="bold"
            android:text="@string/use_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_expiration_date"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_expiration_date_title"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/left_divider"
        android:layout_above="@id/tv_expiration_date_layout"
        android:background="@color/black_50_color"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    <RelativeLayout
        android:layout_below="@id/top_divider"
        android:layout_above="@id/left_divider"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_decription_title"
            android:text="@string/description"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_description"
            android:layout_below="@id/tv_decription_title"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_fine_print_title"
            android:layout_below="@id/tv_description"
            android:layout_marginTop="12dp"
            android:text="@string/fine_print"
            style="@style/Base.TextAppearance.AppCompat.Body2"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_fine_print"
            android:layout_below="@id/tv_fine_print_title"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
