<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/scrollSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="640dp"
            android:animateLayoutChanges="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/big_logo"
                android:layout_width="@dimen/account_width"
                android:layout_height="wrap_content"
                android:src="@mipmap/big_logo"/>
            <RelativeLayout
                android:id="@+id/ll_content"
                android:layout_gravity="center_horizontal"
                android:paddingStart="@dimen/content_side_edge_padding"
                android:paddingEnd="@dimen/content_side_edge_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Space
                    android:id="@+id/divider"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/content_side_edge_padding"
                    android:layout_height="1dp"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_email"
                    android:layout_toStartOf="@id/divider"
                    android:paddingTop="@dimen/labeled_text_field_top_padding"
                    android:paddingBottom="@dimen/labeled_text_field_bottom_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:singleLine="true"
                        android:inputType="textEmailAddress" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_password"
                    android:layout_below="@id/til_email"
                    android:layout_toStartOf="@id/divider"
                    android:paddingTop="@dimen/labeled_text_field_top_padding"
                    android:paddingBottom="@dimen/labeled_text_field_bottom_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:inputType="textPassword"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_zipcode"
                    android:layout_below="@id/til_password"
                    android:layout_toStartOf="@id/divider"
                    android:paddingTop="@dimen/labeled_text_field_top_padding"
                    android:paddingBottom="@dimen/labeled_text_field_bottom_padding"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_zipcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/zipcode_optional"
                        android:inputType="numberSigned"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_first_name"
                    android:layout_toEndOf="@id/divider"
                    android:paddingTop="@dimen/labeled_text_field_top_padding"
                    android:paddingBottom="@dimen/labeled_text_field_bottom_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/first_name"
                        android:singleLine="true" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_confirm_password"
                    android:layout_below="@id/til_first_name"
                    android:layout_toEndOf="@id/divider"
                    android:paddingTop="@dimen/labeled_text_field_top_padding"
                    android:paddingBottom="@dimen/labeled_text_field_bottom_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_phone"
                    android:layout_below="@id/til_confirm_password"
                    android:layout_toEndOf="@id/divider"
                    android:paddingTop="@dimen/labeled_text_field_top_padding"
                    android:paddingBottom="@dimen/labeled_text_field_bottom_padding"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_optional"
                        android:inputType="phone"/>
                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/btn_sign_up"
                    android:layout_below="@id/til_phone"
                    android:layout_marginTop="@dimen/tool_bar_height"
                    android:layout_marginStart="@dimen/button_raised_margin"
                    android:layout_marginEnd="@dimen/button_raised_margin"
                    android:layout_marginBottom="@dimen/button_raised_bottom_margin"
                    android:layout_width="@dimen/account_width"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    style="@style/Raised.Button.Colored"
                    android:text="@string/sign_me_up"/>
            </RelativeLayout>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/pb_working"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/logo_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>