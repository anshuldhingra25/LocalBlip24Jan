<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_margin="@dimen/dialog_content_margin"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sw_never"
                android:text="@string/never_expires"
                android:layout_marginBottom="@dimen/dialog_title_bottom_margin"
                android:layout_gravity="center"
                android:layout_width="@dimen/calendar_width"
                android:layout_height="wrap_content" />
            <CalendarView
                android:id="@+id/cv_date_chooser"
                android:layout_below="@id/sw_never"
                android:selectedWeekBackgroundColor="@android:color/transparent"
                android:weekSeparatorLineColor="@android:color/transparent"
                android:selectedDateVerticalBar="@drawable/date_selector"
                android:layout_centerHorizontal="true"
                android:shownWeekCount="5"
                android:layout_width="@dimen/calendar_width"
                android:layout_height="@dimen/calendar_height"/>
            <View
                android:id="@+id/v_date_chooser_disabler"
                android:layout_below="@id/sw_never"
                android:background="@drawable/progress_dialog_background"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:layout_width="@dimen/calendar_width"
                android:layout_height="@dimen/calendar_height"/>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_cancel"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="@android:string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_choose"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="@string/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
