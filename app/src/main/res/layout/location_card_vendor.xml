<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_to_card_margin"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp"
    >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_address1"
            android:layout_marginTop="@dimen/card_title_vertical_big_margin"
            android:layout_marginEnd="@dimen/card_title_side_margin"
            android:layout_marginStart="@dimen/card_title_side_margin"
            android:maxLines="2"
            android:gravity="center"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_address2"
            android:layout_below="@id/tv_address1"
            android:layout_marginTop="@dimen/card_title_to_subtitle_padding"
            android:layout_marginEnd="@dimen/card_title_side_margin"
            android:layout_marginStart="@dimen/card_title_side_margin"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:maxLines="2"
            android:gravity="center"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_website"
            android:layout_below="@+id/tv_phone"
            android:layout_marginTop="@dimen/card_text_vertical_margin"
            android:layout_marginEnd="@dimen/card_title_side_margin"
            android:layout_marginStart="@dimen/card_title_side_margin"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:maxLines="2"
            android:gravity="center"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_below="@+id/tv_state_city_zip"
            android:layout_marginTop="@dimen/card_text_vertical_margin"
            android:layout_marginEnd="@dimen/card_title_side_margin"
            android:layout_marginStart="@dimen/card_title_side_margin"
            android:gravity="center"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_state_city_zip"
            android:layout_below="@id/tv_address2"
            android:layout_marginTop="@dimen/card_text_vertical_margin"
            android:layout_marginEnd="@dimen/card_title_side_margin"
            android:layout_marginStart="@dimen/card_title_side_margin"
            android:maxLines="2"
            android:gravity="center"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_below="@id/tv_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_text_vertical_margin">
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_remove"
                    android:drawableStart="@drawable/ic_action_remove"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_gravity="center"
                    android:text="@string/remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <FrameLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_edit"
                    android:drawableStart="@drawable/ic_action_edit"
                    android:text="@string/edit"
                    android:layout_gravity="center"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
