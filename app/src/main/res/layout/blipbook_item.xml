<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="@dimen/card_to_card_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_marginBottom="@dimen/card_text_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/blip_image"
                android:layout_marginTop="@dimen/card_title_vertical_margin"
                android:layout_marginEnd="@dimen/card_title_side_margin"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                android:src="@drawable/b_character"
                />
            <TextView
                android:id="@+id/tv_save"
                android:layout_below="@id/blip_image"
                android:layout_width="wrap_content"
                android:text="@string/save"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/content_areas_space"
                android:layout_alignStart="@id/blip_image"
                android:layout_alignEnd="@id/blip_image"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="?android:textColorSecondary"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/rl_save"
                android:layout_below="@id/tv_save"
                android:layout_marginTop="@dimen/near_text_padding"
                android:layout_alignStart="@id/blip_image"
                android:layout_alignEnd="@id/blip_image"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_prefix"
                    android:layout_centerVertical="true"
                    android:text="@string/dollar_sign"
                    android:layout_width="wrap_content"
                    android:textColor="?android:textColorSecondary"
                    android:textStyle="bold"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_value"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@id/tv_prefix"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:textColor="?android:textColorSecondary"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_suffix"
                    android:layout_toEndOf="@id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="?android:textColorSecondary"
                    android:textStyle="bold"
                    android:text="@string/percent_sign"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_offer"
                android:layout_toStartOf="@id/blip_image"
                android:layout_marginStart="@dimen/card_title_side_margin"
                android:layout_marginEnd="@dimen/content_areas_space"
                android:layout_marginTop="@dimen/card_title_vertical_big_margin"
                android:layout_marginBottom="@dimen/card_title_to_subtitle_padding"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:singleLine="true"
                android:textStyle="bold"
                android:ellipsize="marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_vendor"
                android:layout_below="@id/tv_offer"
                android:layout_toStartOf="@id/blip_image"
                android:layout_marginStart="@dimen/card_title_side_margin"
                android:layout_marginEnd="@dimen/content_areas_space"
                android:singleLine="true"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:ellipsize="marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_location"
                android:layout_below="@id/tv_vendor"
                android:layout_toStartOf="@id/blip_image"
                android:layout_marginStart="@dimen/card_title_side_margin"
                android:layout_marginEnd="@dimen/content_areas_space"
                android:layout_marginTop="@dimen/card_text_vertical_margin"
                android:maxLines="3"
                android:ellipsize="marquee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_expiration_date_title"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_below="@id/tv_location"
                android:layout_marginStart="@dimen/card_title_side_margin"
                android:layout_marginEnd="@dimen/content_areas_space"
                android:layout_marginTop="@dimen/card_text_vertical_margin"
                android:textAllCaps="true"
                android:text="@string/use_by"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_expiration_date"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_below="@id/tv_location"
                android:layout_toEndOf="@id/tv_expiration_date_title"
                android:layout_toStartOf="@id/blip_image"
                android:layout_marginStart="@dimen/content_areas_space"
                android:layout_marginEnd="@dimen/content_areas_space"
                android:layout_marginTop="@dimen/card_text_vertical_margin"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <Button
            android:layout_below="@id/rl_content"
            android:drawableStart="@drawable/ic_action_remove"
            android:drawablePadding="@dimen/content_areas_space"
            android:layout_marginEnd="@dimen/card_button_margin"
            android:id="@+id/btn_remove"
            android:text="@string/remove"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_below="@id/rl_content"
            android:layout_toEndOf="@id/btn_remove"
            android:drawableStart="@drawable/ic_action_view"
            android:drawablePadding="@dimen/content_areas_space"
            android:id="@+id/btn_view"
            android:text="@string/view_coupon"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
