<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#80ff0000"/>
            <size android:height="20dp" android:width="20dp"/>
        </shape>
    </item>
    <item android:gravity="top|center_horizontal" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <size android:height="10dp" android:width="4dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <item android:gravity="bottom|center_horizontal" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/>
            <size android:height="4dp" android:width="4dp"/>
        </shape>
    </item>
</layer-list>
