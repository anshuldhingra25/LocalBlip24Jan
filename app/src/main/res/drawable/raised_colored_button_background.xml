<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_window_focused="false" android:state_enabled="true">
        <layer-list>
            <item>
                <nine-patch android:src="@drawable/paper_shadow_z1"/>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp"/>
                    <solid android:color="@color/colored_button_color"/>
                    <stroke android:color="@color/button_shade_color" android:width="1px"/>
                    <padding
                        android:top="@dimen/content_side_edge_padding"
                        android:bottom="@dimen/content_side_edge_padding"
                        android:left="@dimen/content_side_edge_padding"
                        android:right="@dimen/content_side_edge_padding" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_window_focused="false" android:state_enabled="false">
